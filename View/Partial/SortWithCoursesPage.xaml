<Page x:Class="Mini_projekat_2___Entity_Framework_MVVM.View.Partial.SortWithCourses"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mini_projekat_2___Entity_Framework_MVVM.View.Partial"
      mc:Ignorable="d" Background="White"
      d:DesignHeight="400" d:DesignWidth="300" WindowHeight="400" WindowWidth="300"
      Title="SortWithCourses">

    <Grid>
        <StackPanel Margin="20">
            <Label>List of Courses:</Label>
            <ListBox x:Name="CoursesListBox" DisplayMemberPath="cName" SelectionMode="Multiple" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="200"></ListBox>
            <Button Click="SortCoursesButton_Click" Margin="0 20 0 0">Sort</Button>
        </StackPanel>

    </Grid>
</Page>
